@{
    ViewData["Title"] = "Thông tin thành viên - Trang Blog Tôi làm kỹ thuật";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model ToiLamKyThuat.Data.Models.User
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thông tin thành viên</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a>Hệ Thống</a></li>
                    <li class="breadcrumb-item active">Thành viên</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card w-100" style="overflow-x:auto;">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <div class="toolbar">
                            <button class="btn btn-primary" onclick="onSaveChange()"><i class="fas fa-save text-white"></i></button>
                            <a class="btn btn-dark" asp-action="Index" asp-controller="User"><i class="fas fa-arrow-left"></i></i></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form id="userInfor">
                        @Html.HiddenFor(Model => Model.Id)
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Họ và tên</label>
                                    @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", placeholder = "Họ và tên" })
                                </div>
                                <div class="form-group">
                                    <label for="name">Email</label>
                                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", placeholder = "Email" })
                                </div>
                                <div class="form-group">
                                    <label for="name">Điện thoại</label>
                                    @Html.TextBoxFor(Model => Model.Phone, new { @class = "form-control", placeholder = "Điện thoại" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Tên đăng nhập</label>
                                    @Html.TextBoxFor(Model => Model.Username, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                                </div>
                                <div class="form-group">
                                    <label for="name">Mật khẩu</label>
                                    @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", placeholder = "Mật khẩu", type = "password" })
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>

    function onSaveChange() {
        $.ajax({
            type: 'POST',
            url: "@Url.Action("SaveChange","User")",
            data: $("#userInfor").serialize(),
            success: (res) => {
                console.log(res);
            }
        });
    }

</script>

